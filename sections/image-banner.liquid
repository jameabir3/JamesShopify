{% style  %}
    .title_text{
        max-width:{{ section.settings.content_width }}%;

    }
{% endstyle %}


<div class="hero-area-{{section.id}}"
    {% if section.settings.header_bg_img != blank %}
        style="background-image: url('{{ section.settings.header_bg_img |  image_url: width:auto }}');"
        {% endif %}>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="hero_content">
                    <div class="hero_content_left">
                        <div class="title_text">
                        <h1>{{ section.settings.hero_title  }}</h1>
                        </div>
                        {% if section.settings.hero_subtitle != blank %}
                            <p>{{ section.settings.hero_subtitle }}</p>
                        {% endif %}

                        <a href="{{ section.settings.hero-btn-url }}">{{ section.settings.hero-btn }}</a>

                        <div class="brakds-wrok-block">
                        {% for i in (1..4) %}
                            <div class="single_brand-work">
                                <h3>200+ <span>International Brands</span></h3>
                            </div>
                        {% endfor %}
                        </div>

                    </div>
                    <div class="hero_content_right">
                        {% if section.settings.hero_img != blank %}
                            {{ section.settings.hero_img |  image_url: width:650 |  image_tag: widths: '250, 280, 300, 330, 350, 400, 480' }}
                        {% else %}
                        <img src="{{ 'hero-img.png' |  asset_url }}" alt="{{ shop.name }}">
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% schema  %} 
{
    "name": "Image Banner7",
    "settings": [
        {
            "type": "image_picker",
            "id": "header_bg_img", 
            "label": "Header Background"
        }, 
        {
            "type": "image_picker",
            "id": "hero_img",
            "label": "Hero Image"
        }, 
        {
            "type": "text",
            "id": "hero_title",
            "label": "Hero Title",
            "default": "Add HERE HERO TITLE"
        },
        {
            "type": "header",
            "content": "Title width"
            

        },
        {
            "type": "range",
            "id": "content_width",
            "label": "Content Width",
            "min": 50,
            "max": 100,
            "step": 1,
            "unit": "%",
            "default": 60
            

        },
        {
            "type": "richtext",
            "id": "hero_subtitle",
            "label": "Hero Subtitle",
            "default": "<p>Add HERE HERO SUBTITLE</p>"
        }, 
        {
            "type": "text",
            "id": "hero-btn",
            "label": "Hero Button Text",
            "default": "See More"
        }, 
        {
            "type": "text",
            "id": "hero-btn-url",
            "label": "Hero Button URL",
            "default": "https://jamescoders.com"
        }

        
        
    ]
}
{% endschema %}
