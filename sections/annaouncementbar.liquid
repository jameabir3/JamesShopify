 <div class="announcementbar">
   <div class="continer text-center">
    <p>
        {{ section.settings.anctMessage }}
    </p>
   </div>
   <div class="container">
    <a href="{{ section.settings.btnLink }}">{{ section.settings.btnLink }}</a>
    
   </div>
 </div>

 {% schema %}
 {
    "name": "Announcement bar",
    "settings": [
        {
            "type": "text",
            "id": "anctMessage",
            "label": "Text",
            "default": "Sign up and get 30% off to your first order. Sign Up Now"
 
        },
        {
            "type": "text",
            "id": "btnLink",
            "label": "Button Link",
            "default": "Button"
        }
    ]
 }
 {% endschema %}